package com.jai.Quiz.Service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

import com.jai.Quiz.Dao.QuestionRepository;
import com.jai.Quiz.Dao.QuizRepo;
import com.jai.Quiz.Entity.Question;
import com.jai.Quiz.Entity.Quiz;

@Service
public class QuizService {
	
	
	@Autowired
	QuizRepo quizRepo;
	
	@Autowired
	QuestionRepository questionRepository;
	
  

	public ResponseEntity<String> createQuiz(String level, int numQ) {
		
		 List<Question> questions = questionRepository.findRandomQuestionByLevel(level, numQ);
		
		Quiz quiz = new Quiz();
		
		quiz.setLevel(level);
		quiz.setQuestion(questions);
		return null;
	}
	
	
	

}
